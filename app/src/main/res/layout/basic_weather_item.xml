<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="115dp"
                android:layout_height="150dp"
                android:orientation="vertical">

    <TextView
        android:text="Oct 06, 2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:id="@+id/textViewDate"
        android:textAlignment="center"/>

    <ImageView
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="11dp"
        android:id="@+id/imageViewWeatherIcon"
        android:layout_below="@+id/textViewDate"
        android:layout_alignRight="@+id/textViewDate"
        android:layout_alignEnd="@+id/textViewDate"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_width="48dp"
        android:layout_height="48dp"/>

    <TextView
        android:text="Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAvgTemp"
        android:layout_below="@+id/imageViewWeatherIcon"
        android:layout_alignLeft="@+id/textViewDate"
        android:layout_alignStart="@+id/textViewDate"
        android:textAlignment="center"
        android:layout_alignRight="@+id/textViewDate"
        android:layout_alignEnd="@+id/textViewDate"/>
</RelativeLayout>